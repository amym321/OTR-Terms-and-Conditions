{% if section.settings.enable_section %}
<div class="banner-section mb-4" style="background-image: url({{ section.settings.background_image | img_url: 'master' }}); background-position: center;">
  <div class="banner-content text-center">

    {% if section.settings.heading_image %}
        {% if section.settings.heading_image != blank %}
          <img src="{{ section.settings.heading_image | img_url: 'master' }}" width="150px"><br>
        {% endif %}
      {% endif %}
    
    <h1 style="color: {{ section.settings.banner_text_color }}; font-weight: 800; max-width: 600px; margin-left: auto; margin-right: auto;">{{ section.settings.title }}</h1>
    <p class="mb-3" style="color: {{ section.settings.banner_text_color }}; max-width: 600px; margin-left: auto; margin-right: auto;">{{ section.settings.description }}</p>
    
  <a span="mt-3" href="{{ section.settings.button_url }}" class="button btn-otr">{{ section.settings.button_text }}</a>
  <p class="text-center mt-4" style="color: {{ section.settings.banner_text_color }}; font-size: 12px;">Exclusions apply. <a type="button" class="text-center" tabindex="0" data-toggle="popover" data-trigger="focus" data-placement="top" title="Offer details" data-content="{{ section.settings.terms }}">
   <span style="text-decoration: underline; color: #339933">See terms.</span></a></p>
  </div>
</div>
{% endif %}

{% schema %}
{
  "name": "Banner Section",
  "settings": [
     {
      "type": "checkbox",
      "label": "Enable Section",
      "id": "enable_section",
      "default": false
    },
     {
      "type": "color",
      "id": "banner_text_color",
      "label": "Banner Text Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "label": "Title",
      "id": "title",
      "default": "Welcome to our Store!"
    },
    {
      "type": "textarea",
      "label": "Description",
      "id": "description",
      "default": "Discover our amazing products."
    },
    {
      "type": "textarea",
      "label": "Terms",
      "id": "terms",
      "default": "Terms of sale."
    },
    {
      "type": "image_picker",
      "label": "Background Image (1920x1080)",
      "id": "background_image"
    },
    {
      "type": "image_picker",
      "label": "Leading Image",
      "id": "heading_image"
    },
    {
      "type": "url",
      "label": "Button URL",
      "id": "button_url",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "label": "Button Text",
      "id": "button_text",
      "default": "Shop Now"
    }
  ]
}
{% endschema %}

